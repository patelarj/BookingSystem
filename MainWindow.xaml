<Window x:Class="Midterm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterm"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="Log In Page" Height="450" Width="808">
    <Grid Margin="0,0,10,7" >

        <Label Content="User Name" Margin="170,104,500,269" ></Label>
        <TextBox x:Name="input" HorizontalAlignment="Center" Margin="0,108,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Height="27" />
        <Label Content="Password" Margin="170,173,500,202" ></Label>
        <Button Content="Log In" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Height="25" Width="128" Click="Button_Click"/>
        <PasswordBox x:Name="pass" HorizontalAlignment="Center" VerticalAlignment="Top" Width="128" Height="22" Margin="0,178,0,0"/>

    </Grid>
</Window>
